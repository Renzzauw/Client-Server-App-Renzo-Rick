doctype html

html.
    <head>
        <meta charset = "utf-8">
        <meta name="title" content="GeeGees">
        <meta name="description" content="Your Online Gamestore">
        <meta name="keywords" content="games, gaming, online games, digital, store">
        <link rel="stylesheet" type="text/css" href='/stylesheets/style.css'>
        <link href='https://fonts.googleapis.com/css?family=Alef' rel='stylesheet'>
    </head>
    <body>
        <!-- top nav menu -->
        <nav class="topnav">
            <a href="/">Home</a>
            <a class="menu-logged-out" href="/signup">Sign Up</a>
            <a class="menu-logged-out" href="/login">Log In</a>
            <a class="menu-logged-in" href="/signout">Log Out</a>
            <a class="menu-logged-in" href="/account">Account Settings</a>
            <a class="menu-logged-in" href="/history">Order History</a>
            <form id="search-bar">
                <button type="submit">Search</button>
                <input type="text" placeholder="Search Games...">
            </form>   
        </nav>

        <!-- banner -->
        <img id="index-banner" src="/images/index/banner-small.jpg" alt="index banner">

        <!-- introduction -->
        <header>
            <h1 id="page-title">Account</h1>
            <h2>Check or change your personal info here</h2>
        </header>
        <!-- main content page -->  
        <main>   
            <section>
                <h2>Account Info</h2>
                <p>Username: #{username}</p>
                <p>E-mail address: #{email}</p>
                <p>First Name: #{firstname}</p>
                <p>Last Name: #{lastname}</p>
                <p>Password: #{password}</p>
            </section>                     
            <section id="account-info">
                <h2>Change Account Info</h2>
                <form class="info-form" method="post">
                    <p>Username:</p>
                    <input type="text" name="username" placeholder="Username" required>
                    <p>E-mail address:</p>
                    <input type="email" name="email" placeholder="E-mail address" required>
                    <p>First Name:</p>
                    <input type="text" name="firstname" placeholder="First Name" required>
                    <p>Last Name:</p>
                    <input type="text" name="lastname" placeholder="Last Name" required>
                    <p>Password (use at least 5 characters):</p>
                    <input minlength="5" type="password" name="password" placeholder="Password" required>
                    <p id="changes-error-message">#{error}</p>
                    <input type="submit" value="Submit Changes">
                </form>
            </section>
        </main>
        <footer>
            <h3>Â©GeeGees 2018 - Created by Renzo Schindeler & Rick Bouman</h3>
        </footer>
    </body>
    
</html>