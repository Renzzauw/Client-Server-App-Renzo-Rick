                    <input type="checkbox" id="racing" name="racing" checked>
                    <label for="racing">racing</label>
                    <input type="checkbox" id="shooter" name="shooter" checked>
                    <label for="shooter">shooter</label>
                    <input type="checkbox" id="sports" name="sports" checked>
                    <label for="sports">sports</label>
                    <input type="checkbox" id="strategy" name="strategy" checked>
                    <label for="strategy">strategy</label>

                    <h5>Publisher</h5>
                    <input type="checkbox" id="ubisoft" name="ubisoft" checked>
                    <label for="ubisoft">ubisoft</label>
                    <input type="checkbox" id="telltale" name="telltale" checked>
                    <label for="telltale">telltale games</label>
                    <input type="checkbox" id="teammeat" name="teammeat" checked>
                    <label for="teammeat">team meat</label>
                    <input type="checkbox" id="studiomdhr" name="studiomdhr" checked>
                    <label for="studiomdhr">studio mdhr</label>
                    <input type="checkbox" id="redbarrels" name="redbarrels" checked>
