                    <input type="checkbox" id="pubgcorporation" name="pubgcorporation" checked>
                    <label for="pubgcorporation">pubg corporation</label>
                    <input type="checkbox" id="nintendo" name="nintendo" checked>
                    <label for="nintendo">nintendo</label>
                    <input type="checkbox" id="monolith" name="monolith" checked>
                    <label for="monolith">monolith</label>
                    <input type="checkbox" id="guerrillagames" name="guerrillagames" checked>
                    <label for="guerrillagames">guerrilla games</label>
                    <input type="checkbox" id="ghostgames" name="ghostgames" checked>
                    <label for="ghostgames">ghost games</label>
                    <input type="checkbox" id="fromsoftware" name="fromsoftware" checked>
                    <label for="fromsoftware">from software</label>
                    <input type="checkbox" id="firaxisgames" name="firaxisgames" checked>
                    <label for="firaxisgames">firaxis games</label>
                    <input type="checkbox" id="ensemblestudios" name="ensemblestudios" checked>
                    <label for="ensemblestudios">ensemble studios</label>
                    <input type="checkbox" id="ea" name="ea" checked>
                    <label for="ea">electronic arts</label>
                    <input type="checkbox" id="elinemedia" name="elinemedia" checked>
                    <label for="elinemedia">e-line media</label>
